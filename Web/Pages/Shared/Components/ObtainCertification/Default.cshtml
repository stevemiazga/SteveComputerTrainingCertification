@model Web.ViewModels.ObtainCertificationComponentViewModel


<a href="#" id="pop">
    Recent Certifications <span style="text-decoration:none;" class="badge badge-primary">@Model.Count</span>
</a>

<div id="divcertpopup" class="certpopup" style="display:none;">
    <div class="certpopup-header">
        <strong class="mr-auto text-primary">Recent Certifications</strong>
        <span id="certclose" class="ml-2 mb-1">&times;</span>
    </div>
    <div class="certpopup-body">
        @{ if (Model.Count == 0)
            {
                <div>
                    Currently none
                </div>
            }
            else
            {
                @foreach (var item in @Model.ObtainCertificationNotices)
                {
                    <div>
                        @item.FirstName @item.LastName @item.Email recently obtained certification @item.CertificationCredential - @item.CertificationDescription on @item.ObtainCertificationDate
                    </div>
                }
            }
        }
    </div>
</div>



