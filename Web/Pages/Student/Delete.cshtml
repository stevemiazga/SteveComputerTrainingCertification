@page
@model Web.Pages.Student.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

    <div class="card">
        <div class="card-header alert-danger">
            <h5>Delete Student</h5>
        </div>
        <div class="card-body">
            <h5>Are you sure you want to delete this?</h5>
            <table class="table table-sm" id="students_table2">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Courses
                        </th>
                        <th>
                            Exams
                        </th>
                        <th>
                            Certifications
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => @Model.StudentRecord.FirstName)&nbsp;@Html.DisplayFor(modelItem => @Model.StudentRecord.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => @Model.StudentRecord.Email)
                        </td>
                        <td>
                            <table>
                                @foreach (var course in @Model.StudentRecord.Courses)
                                {
                                    <tr>
                                        <td style="border:none;">
                                            @Html.DisplayFor(modelItem => course.CourseTitle)
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                        <td>
                            <table>
                                @foreach (var exam in @Model.StudentRecord.Exams)
                                {
                                    <tr>
                                        <td style="border:none;">
                                            @Html.DisplayFor(modelItem => exam.ExamTitle)
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                        <td>
                            <table style="border:none;">
                                @foreach (var cert in @Model.StudentRecord.Certifications)
                                {
                                    <tr>
                                        <td style="border:none;">
                                            @Html.DisplayFor(modelItem => cert.CertificationTitle)
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                    </tr>
                </tbody>
            </table>
            <form method="post">
                <input type="hidden" asp-for="@Model.StudentRecord.StudentId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
