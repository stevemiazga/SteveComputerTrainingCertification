@page
@model Web.Pages.Student.CreateModel
@{
    ViewData["Title"] = "Create";
}

<div class="card">
    <div class="card-header bg-info btn-primary"><h5>Create Student</h5></div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.StudentRecord.FirstName" class="control-label"></label>
                <input asp-for="@Model.StudentRecord.FirstName" class="form-control" />
                <span asp-validation-for="@Model.StudentRecord.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StudentRecord.LastName" class="control-label"></label>
                <input asp-for="@Model.StudentRecord.LastName" class="form-control" />
                <span asp-validation-for="@Model.StudentRecord.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.StudentRecord.Email" class="control-label"></label>
                <input asp-for="@Model.StudentRecord.Email" class="form-control" />
                <span asp-validation-for="@Model.StudentRecord.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5 class="card-group text-info font-weight-bold">Courses</h5>
                @{
                    for (int i = 0; i < Model.AvailableCertificatons.Courses.Count(); i++)
                    {
                        <div>
                            <input asp-for="@Model.AvailableCertificatons.Courses[i].CourseCheckboxAnswer" type="checkbox" />
                            <label asp-for="@Model.AvailableCertificatons.Courses[i].CourseTitle">@Model.AvailableCertificatons.Courses[i].CourseTitle</label>
                            <input asp-for="@Model.AvailableCertificatons.Courses[i].CourseId" type="hidden" />
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <h5 class="card-group text-info font-weight-bold">Exams</h5>
                @{
                    for (int i = 0; i < Model.AvailableCertificatons.Exams.Count(); i++)
                    {
                        <div>
                            <input asp-for="@Model.AvailableCertificatons.Exams[i].ExamCheckboxAnswer" type="checkbox" />
                            <label asp-for="@Model.AvailableCertificatons.Exams[i].ExamTitle">@Model.AvailableCertificatons.Exams[i].ExamTitle</label>
                            <input asp-for="@Model.AvailableCertificatons.Exams[i].ExamId" type="hidden" />
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <h5 class="card-group text-info font-weight-bold">Certifications</h5>
                @{
                    for (int i = 0; i < Model.AvailableCertificatons.Certifications.Count(); i++)
                    {
                        <div>
                            <label asp-for="@Model.AvailableCertificatons.Certifications[i].CertificationTitle">@Model.AvailableCertificatons.Certifications[i].CertificationTitle</label>
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

